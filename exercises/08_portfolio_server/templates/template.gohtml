<!DOCTYPE html>
<html>
<head>
    <title>{{ .Name }} - {{ .Title }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <style>
        /* Additional custom styles */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .container {
            max-width: 1000px; /* Increase the max-width as desired */
        }

        header {
            text-align: center;
            margin-bottom: 2rem;
        }

        h1 {
            font-size: 2.5rem;
            text-align: center;
        }

        h3 {
            margin-bottom: 1rem;
            text-align: center;
        }

        p {
            text-align: justify;
            max-width: 700px;
            margin: 0 auto;
            margin-bottom: 1rem;
        }

        .profile-img {
            display: block;
            margin: 0 auto;
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 50%;
        }

        .networks-list {
            list-style: none;
            padding: 0;
            text-align: center;
        }

        .networks-list li {
            display: inline-block;
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        footer {
            margin-top: 2rem;
        }

    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>{{ .Name }}</h1>
            <h2>{{ .Title }}</h2>
            <br>
            <img src="{{ .PhotoPath }}" class="profile-img" alt="Profile Photo">
            <br>
            <ul class="networks-list">
                {{ range .Networks }}
                <li><a href="{{ .Link }}" target="_blank"> {{ .Name }} </a></li>
                {{ end }}
            </ul>
        </header>

        <section id="about">
            <h3>About Me</h3>
            <p>{{ .About }}</p>
        </section>

        <footer>
            <p class="text-center">Â© {{ .Name }}. All rights reserved.</p>
        </footer>
    </div>
</body>